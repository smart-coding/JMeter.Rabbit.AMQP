            <scope>runtime</scope>
        </dependencySet>        <!-- 增加scope类型为system的配置 -->
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>false</unpack>
            <scope>system</scope>
