    <id>b</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<!-- zip,tar,tar.gz,tar.bz2,jar,dir,war -->
		<format>zip</format>
	</formats>
	<files>
		<file>
			<source>${project.build.directory}/JMeter-Rabbit-AMQP-${version}.jar</source>
